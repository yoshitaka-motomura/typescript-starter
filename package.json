{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "nodejs typescript starter with eslint, prettier, and jest",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "serve": "nodemon --watch 'src/**/*.ts' --exec 'ts-node src/index.ts'",
    "build": "tsc -p .",
    "lint": "eslint src/**/*.ts",
    "lint:prettier": "prettier --write 'src/**/*.ts'",
    "lint:fix": "run-s lint lint:prettier",
    "readme": "npx readme-md-generator -y"
  },
  "keywords": [
    "typescript"
  ],
  "homepage": "https://github.com/yoshitaka-motomura/typescript-starter#readme",
  "bugs": {
    "url": "https://github.com/yoshitaka-motomura/typescript-starter/issues"
  },
  "reository": {
    "type": "git",
    "url": "git@github.com:yoshitaka-motomura/typescript-starter.git"
  },
  "author": "yoshitaka-motomura",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.2",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "npm-run-all": "^4.1.5"
  }
}
